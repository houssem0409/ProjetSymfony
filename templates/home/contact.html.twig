                        <p>Main Office: 7563 St. Vincent Place, Glasgow<br/>
                            Phones: 321321321, 321321321<br/>
                            Email: <a href="#">info@mydomain.com</a></p>
                    </div>
                </div>
            </form>
        </div>
    </section>
{% endblock %}